<Window x:Class="Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Car Controller" Height="720" Width="1280" Background="#f0f2f5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!-- Left Panel -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#2c3e50">
            <DockPanel LastChildFill="True" Margin="5">
                <StackPanel>
                    <Border Height="150" Background="#34495e" Margin="5" CornerRadius="10">
                        <TextBlock Text="MAP" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="50" Background="#95a5a6" Margin="5" CornerRadius="5">
                        <TextBlock Text="Current Position" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="#dcdde1" Margin="5" CornerRadius="5" VerticalAlignment="Stretch">
                        <TextBlock Text="Traversed Path" Margin="5"/>
                    </Border>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Live Video Section -->
        <Border Grid.Column="1" Grid.Row="0" Background="#bdc3c7" Margin="5" CornerRadius="10">
            <Canvas x:Name="GraphCanvas"/>
        </Border>

        <!-- Bottom Panel -->
        <Border Grid.Column="1" Grid.Row="1" Background="#ecf0f1" Margin="5" CornerRadius="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ErrorTextBlock" 
                           Margin="5" 
                           TextWrapping="Wrap"
                           Foreground="#e74c3c"
                           FontWeight="Bold"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>