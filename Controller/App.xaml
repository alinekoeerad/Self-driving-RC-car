<Application x:Class="Controller.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Controller"
             xmlns:common="clr-namespace:Controller.Common"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <common:CenterConverter x:Key="CenterConverter"/>
            <common:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <common:HeadingToColorConverter x:Key="HeadingToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>